<BaseLayout title="Arizona Aikido – Image Gallery">
  <!-- Header -->
  <section class="border-b border-slate-800 bg-slate-950/90">
    <div class="mx-auto max-w-6xl px-4 py-10 md:py-14">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-violet-400">
        Image Gallery
      </p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight text-slate-50">
        Arizona Aikido – Photos
      </h1>
      <p class="mt-4 text-sm md:text-base text-slate-300 max-w-3xl">
        Browse photos of the Arizona Agatsu Dojo, seminars, visiting teachers, historical images, and trips connected with Arizona Aikido.
        Click any photo to view it larger.
      </p>
    </div>
  </section>

  <!-- Section nav for easier browsing -->
  <nav class="mx-auto max-w-6xl px-4 pt-6 pb-4">
    <div class="flex flex-wrap gap-2 text-xs">
      {gallerySections.map((section) => (
        <a
          href={`#${section.id}`}
          class="rounded-full border border-slate-700 bg-slate-900/80 px-3 py-1.5 font-medium text-slate-100 hover:border-violet-400 hover:text-violet-200"
        >
          {section.title}
        </a>
      ))}
    </div>
  </nav>

  <!-- Gallery sections -->
  <section class="mx-auto max-w-6xl px-4 pb-10 md:pb-14 space-y-10 text-slate-200">
    {gallerySections.map((section) => (
      <section id={section.id} class="space-y-4 scroll-mt-24">
        <header class="space-y-1">
          <h2 class="text-lg md:text-xl font-semibold text-slate-50">
            {section.title}
          </h2>
          <p class="text-xs md:text-sm text-slate-400">
            {section.description}
          </p>
        </header>

        {section.images.length === 0 ? (
          <p class="text-xs text-slate-500">
            Images for this section will be added soon.
          </p>
        ) : (
          <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            {section.images.map((img) => (
              <figure class="group overflow-hidden rounded-2xl border border-slate-800 bg-slate-950/80">
                <a
                  href={img.src}
                  data-lightbox-src={img.src}
                  data-lightbox-caption={img.caption}
                  class="block"
                >
                  <img
                    src={img.src}
                    alt={img.alt}
                    loading="lazy"
                    class="h-52 w-full object-contain object-center bg-slate-900 transition-transform duration-300 group-hover:scale-105"
                  />
                </a>
                <figcaption class="border-t border-slate-800 px-3 py-2 text-[11px] text-slate-300">
                  {img.caption}
                </figcaption>
              </figure>
            ))}
          </div>
        )}
      </section>
    ))}
  </section>

  <!-- Lightbox modal -->
  <div
    id="lightbox"
    class="fixed inset-0 z-40 hidden flex items-center justify-center"
  >
    <div
      id="lightbox-backdrop"
      class="absolute inset-0 bg-black/70"
    ></div>
    <div
      class="relative z-10 mx-4 max-h-[90vh] max-w-4xl rounded-2xl border border-slate-700 bg-slate-950 p-4 shadow-2xl flex flex-col gap-3"
    >
      <button
        id="lightbox-close"
        type="button"
        class="absolute right-3 top-3 text-xs font-semibold text-slate-300 hover:text-slate-50"
      >
        Close ✕
      </button>
      <div class="flex-1 overflow-auto flex items-center justify-center">
        <img
          id="lightbox-img"
          src=""
          alt=""
          class="max-h-[70vh] max-w-full object-contain"
        />
      </div>
      <p
        id="lightbox-caption"
        class="text-xs text-slate-300"
      ></p>
    </div>
  </div>

  <script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
      const lightbox = document.getElementById("lightbox");
      const lightboxImg = document.getElementById("lightbox-img");
      const lightboxCaption = document.getElementById("lightbox-caption");
      const lightboxClose = document.getElementById("lightbox-close");
      const lightboxBackdrop = document.getElementById("lightbox-backdrop");

      if (!lightbox || !lightboxImg || !lightboxCaption) return;

      document.querySelectorAll("[data-lightbox-src]").forEach((el) => {
        el.addEventListener("click", (e) => {
          e.preventDefault(); // prevent navigation, use modal instead
          const src = el.getAttribute("data-lightbox-src");
          const caption = el.getAttribute("data-lightbox-caption") || "";
          if (!src) return;
          lightboxImg.src = src;
          lightboxImg.alt = caption;
          lightboxCaption.textContent = caption;
          lightbox.classList.remove("hidden");
        });
      });

      function closeLightbox() {
        lightbox.classList.add("hidden");
        lightboxImg.src = "";
        lightboxCaption.textContent = "";
      }

      lightboxClose?.addEventListener("click", closeLightbox);
      lightboxBackdrop?.addEventListener("click", closeLightbox);
      window.addEventListener("keydown", (e) => {
        if (e.key === "Escape") closeLightbox();
      });
    });
  </script>
</BaseLayout>
