---
import "../styles/global.css";
const { title = "Arizona Aikido" } = Astro.props;
---


<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-950">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="https://fonts.googleapis.com/css2?family="Inter":wght@400;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>

    <meta
      name="description"
      content="Arizona Aikido is a non-profit Aikido dojo in Phoenix, Arizona, offering traditional Aikido training for adults and youth."
    />

    <!-- You can add favicon links here later -->
  </head>
  <body class="min-h-full bg-slate-950 text-slate-100 antialiased">
    <!-- Site shell -->
    <div class="flex min-h-screen flex-col">
      <!-- Header / Nav -->
      <header class="border-b border-slate-800 bg-slate-950/95 backdrop-blur">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 md:py-4">
          <!-- Logo + name -->
          <a href="/" class="flex items-center gap-3">
            <div
              class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-900 ring-1 ring-violet-500/70"
            >
              <img
                src="https://azaikido.org/images/AZAikidoLogoSml.gif"
                alt="Arizona Aikido logo"
                class="h-8 w-8 object-contain"
              />
            </div>
            <div class="leading-tight">
              <div class="text-sm font-semibold tracking-tight text-slate-50">
                Arizona Aikido
              </div>
              <div class="text-[11px] uppercase tracking-[0.18em] text-slate-400">
                Phoenix, Arizona
              </div>
            </div>
          </a>

          <!-- Desktop nav -->
          <nav class="hidden items-center gap-6 text-sm font-medium text-slate-300 md:flex">
            <a href="/" class="hover:text-violet-300">Home</a>
            <a href="/new-students" class="hover:text-violet-300">New Students</a>
            <a href="/schedule" class="hover:text-violet-300">Schedule</a>
            <a href="/biography" class="hover:text-violet-300">Biographies</a>
            <a href="/cost" class="hover:text-violet-300">Costs</a>
            <a href="/links" class="hover:text-violet-300">Links</a>
            <a href="/calendar" class="hover:text-violet-300">Calendar</a>
            <a href="/directions" class="hover:text-violet-300">Directions</a>
			<a href="/contact" class="hover:text-violet-300">Contact</a>
            <!-- Add these later when the pages exist
            <a href="/gallery" class="hover:text-violet-300">Gallery</a>
            -->
          </nav>

          <!--Mobile Nav -->
          <details class="relative md:hidden">
            <summary class="flex cursor-pointer items-center gap-2 rounded-md border border-slate-700 bg-slate-900 px-3 py-1.5 text-xs font-semibold text-slate-100">
              Menu
              <span class="text-[10px] text-slate-400">▾</span>
            </summary>
            <div
              class="absolute right-0 mt-2 w-44 rounded-xl border border-slate-800 bg-slate-950/98 p-2 text-sm shadow-xl"
            >
              <a
                href="/"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Home
              </a>
              <a
                href="/new-students"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                New Students
              </a>
              <a
                href="/schedule"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Schedule
              </a>
              <a
                href="/biography"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Biographies
              </a>
               <a
                href="/gallery"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Gallery
              </a>
              <a
                href="/cost"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Costs
              </a>
              <a
                href="/links"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Links
              </a>

               <a
                href="/calendar"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Calendar
              </a>
              <a
                href="/directions"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Directions
              </a>
			   <a
                href="/contact"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Contact
              </a>
              <!-- Uncomment as you add these pages
              <a
                href="/gallery"
                class="block rounded-md px-3 py-1.5 text-slate-200 hover:bg-slate-800/80"
              >
                Gallery
              </a>
              -->
            </div>
          </details>
        </div>
      </header>

      <!-- Main content -->
      <main class="flex-1 bg-slate-950">
        <div class="mx-auto max-w-6xl">
          <slot />
        </div>
      </main>

      <!-- Footer -->
      <footer class="border-t border-slate-800 bg-slate-950/95">
        <div class="mx-auto flex max-w-6xl flex-col gap-3 px-4 py-6 text-xs text-slate-500 md:flex-row md:items-center md:justify-between">
          <div>
            <p>© {new Date().getFullYear()} Arizona Aikido.</p>
            <p class="mt-1">
              Arizona Aikido is a non-profit Aikido dojo affiliated with Aikido Schools of Ueshiba.
            </p>
          </div>
          <div class="space-y-1 text-[11px] md:text-xs text-slate-500">
            <p>Training location and schedule subject to change; contact the dojo to confirm.</p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
