---
import BaseLayout from "../layouts/Layout.astro";
---

<BaseLayout title="Arizona Aikido – Contact">

  <!-- Header -->
  <section class="border-b border-slate-800 bg-slate-950/90">
    <div class="mx-auto max-w-4xl px-4 py-8 md:py-14">
      <p class="text-[11px] font-semibold uppercase tracking-[0.25em] text-violet-400">
        Get in touch
      </p>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight text-slate-50">
        Contact Arizona Aikido
      </h1>
      <p class="mt-4 text-sm md:text-base text-slate-300 max-w-2xl leading-relaxed">
        Have questions about classes, seminars, or visiting the dojo? You can reach us by email,
        phone, or mail. For directions to the dojo itself, please see the Directions page.
      </p>
    </div>
  </section>

  <!-- Contact Blocks -->
  <section class="mx-auto max-w-4xl px-4 py-8 md:py-14 space-y-8 text-sm md:text-base text-slate-200">

    <div class="grid gap-6 md:grid-cols-2">

      <!-- Email -->
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-5">
        <h2 class="text-xs md:text-sm font-semibold uppercase tracking-[0.18em] text-violet-300">
          Email
        </h2>
        <p class="mt-3 text-sm text-slate-300">
          For general questions about training, seminars, membership, or visiting:
        </p>
        <p class="mt-3 text-sm font-semibold text-slate-50 break-all">
          <a href="mailto:Contact@AZAikido.org" class="hover:text-violet-300">
            Contact@AZAikido.org
          </a>
        </p>
      </div>

      <!-- Phone -->
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-5">
        <h2 class="text-xs md:text-sm font-semibold uppercase tracking-[0.18em] text-violet-300">
          Phone
        </h2>
        <p class="mt-3 text-sm text-slate-300">
          You can reach Arizona Aikido by phone at:
        </p>
        <p class="mt-3 text-sm font-semibold text-slate-50">
          <a href="tel:16022668321" class="hover:text-violet-300">
            602-266-8321
          </a>
        </p>
      </div>

    </div>

    <!-- Mailing address -->
    <section class="rounded-2xl border border-slate-800 bg-slate-900/70 p-5 leading-relaxed">
      <h2 class="text-xs md:text-sm font-semibold uppercase tracking-[0.18em] text-violet-300">
        Mailing address
      </h2>

      <p class="mt-3 text-sm text-slate-300">
        For mail, correspondence, and registration forms:
      </p>

      <address class="mt-4 text-sm not-italic text-slate-100 space-y-1">
        <div>ARIZONA AIKIDO</div>
        <div>ATTN: Don Crawford</div>
        <div>2416 S Mulberry</div>
        <div>Mesa, AZ 85202-7532</div>
      </address>

      <p class="mt-3 text-xs text-slate-400 leading-relaxed">
        Note: This is a mailing address. The dojo training location is different – see
        <a href="/directions" class="text-violet-300 hover:text-violet-200 underline underline-offset-2">
          Directions
        </a>
        for the dojo address and map.
      </p>
    </section>

    <!-- Visitor note -->
    <section class="rounded-2xl border border-emerald-600/40 bg-emerald-950/20 p-5 space-y-3 leading-relaxed">
      <h2 class="text-xs md:text-sm font-semibold uppercase tracking-[0.18em] text-emerald-300">
        Visiting the dojo
      </h2>

      <p class="text-sm text-emerald-100/90">
        Prospective students are welcome to visit and watch a class, or to join in as beginners.
        It is helpful (but not required) to email or call ahead.
      </p>

      <p class="text-xs text-emerald-200/90 leading-relaxed">
        Class times can occasionally change. Please check the latest schedule or confirm by email
        or phone before your first visit.
      </p>
    </section>

    <!-- Contact form -->
    <section class="rounded-2xl border border-violet-600/40 bg-slate-900/70 p-6 space-y-4">
      <h2 class="text-lg font-semibold text-slate-50">Send a message to the dojo</h2>

      <p class="text-sm text-slate-300 leading-relaxed">
        This form opens your email program to send a message to
        <span class="font-semibold">Contact@AZAikido.org</span>.
      </p>

      <form
        action="/api/contact"
        method="POST"
        class="mt-4 grid gap-4 md:grid-cols-2"
      >

        <!-- Name -->
        <div class="space-y-1">
          <label for="name" class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-300">
            Name
          </label>
          <input
            id="name"
            name="name"
            type="text"
            required
            class="w-full rounded-lg border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 focus:border-violet-500 focus:ring-1 focus:ring-violet-500"
          />
        </div>

        <!-- Email -->
        <div class="space-y-1">
          <label for="email" class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-300">
            Email
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            class="w-full rounded-lg border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 focus:border-violet-500 focus:ring-1 focus:ring-violet-500"
          />
        </div>

        <!-- Phone -->
        <div class="space-y-1">
          <label for="phone" class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-300">
            Phone (optional)
          </label>
          <input
            id="phone"
            name="phone"
            type="tel"
            class="w-full rounded-lg border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 focus:border-violet-500 focus:ring-1 focus:ring-violet-500"
          />
        </div>

        <!-- Interest -->
        <div class="space-y-1">
          <label for="interest" class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-300">
            What are you interested in?
          </label>
          <select
            id="interest"
            name="interest"
            class="w-full rounded-lg border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 focus:border-violet-500 focus:ring-1 focus:ring-violet-500"
          >
            <option value="adult-classes">Adult Classes</option>
            <option value="youth-classes">Youth Classes</option>
            <option value="seminars">Seminars/Events</option>
            <option value="">General Question</option>
          </select>
        </div>

        <!-- Message -->
        <div class="md:col-span-2 space-y-1">
          <label for="message" class="text-xs font-semibold uppercase tracking-[0.18em] text-slate-300">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="w-full rounded-lg border border-slate-700 bg-slate-950 px-3 py-2 text-sm text-slate-100 focus:border-violet-500 focus:ring-1 focus:ring-violet-500"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <div class="md:col-span-2 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <button
            type="submit"
            class="inline-flex items-center rounded-full border border-violet-500/80 bg-violet-600/90 px-6 py-2.5 text-sm font-semibold text-slate-50 shadow-sm hover:bg-violet-500"
          >
            Send Message
          </button>
        </div>
      </form>
    </section>

  </section>
</BaseLayout>
